{
  "name": "github-asana-integrations",
  "version": "1.0.0",
  "description": "GitHub Actions for Asana integration",
  "main": "index.js",
  "scripts": {
    "install-deps": "npm install",
    "typecheck": "tsc --noEmit",
    "build": "ncc build src/index.ts -o build/ -m -q --no-source-map-register --target es2022 && npm run clean-build-artifacts",
    "clean-actions": "cd build && rm -rf * || true",
    "clean-build-artifacts": "cd build && rm -rf package.json && find . -name '*.d.ts*' -delete 2>/dev/null || true",
    "clean": "npm run clean-actions"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/node-fetch": "^2.6.12",
    "@vercel/ncc": "^0.38.3",
    "typescript": "^5.8.3"
  },
  "type": "module",
  "keywords": [
    "github-actions",
    "asana",
    "integration"
  ],
  "author": "Taimur Salman",
  "license": "MIT"
}
